<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.teamsmokeweed.qroute.bar.BarResultQr
        android:id="@+id/resultBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/desIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_info_24px"
        android:layout_below="@id/resultBar"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        />
    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Desscription"
        android:layout_toRightOf="@id/desIcon"
        android:layout_below="@id/resultBar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:textColor="@color/Black"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/webPageIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_link_24dp"
        android:layout_below="@id/des"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/webPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wwww.sample.com"
        android:layout_toRightOf="@id/desIcon"
        android:layout_below="@id/des"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:textColor="#0071BC"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/reGenQr"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:text="@string/regenerate_qr_code"
        android:textSize="24dp"
        android:textColor="#FFF"
        android:gravity="center_horizontal|center"
        android:background="#0071BC"
        />


</RelativeLayout>
    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/ciclebutton"
        android:src="@drawable/ic_directions_48px"
        android:id="@+id/imgRoute"
        app:layout_anchor="@id/resultBar"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginRight="24dp"
        />

</android.support.design.widget.CoordinatorLayout>