<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context="com.teamsmokeweed.qroute.MainActivity">

    <LinearLayout
        android:id="@+id/ButtonToGen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        >
        <Button
            android:clickable="false"
            android:layout_marginRight="16dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:textAllCaps="false"
            android:background="@drawable/ic_add_location_black_24px"
            />
        <TextView

            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Location"
            android:textColor="#29ABE2"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonToRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonToGen"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:layout_marginBottom="16dp"

        >
        <Button
            android:clickable="false"
            android:layout_marginRight="16dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/ic_history_black_24px"
            />
        <TextView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent"
            android:textColor="#29ABE2"
            android:textSize="18dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonToRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonToRoute"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        >
        <Button
            android:clickable="false"
            android:layout_marginRight="16dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/ic_qr"
            />
        <TextView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read From QR"
            android:textColor="#29ABE2"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/gray"
        android:textSize="12sp"

        />



</RelativeLayout>
