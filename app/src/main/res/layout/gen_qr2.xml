<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.teamsmokeweed.qroute.bar.BarGenQrS
        android:id="@+id/barGenQr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/here_is_your_qr"
        android:textSize="28sp"
        android:textColor="#4CAF50"
        android:layout_below="@id/barGenQr2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />
    <ImageView
        android:id="@+id/imgQrGen"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        />




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        android:layout_below="@+id/imgQrGen"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"

        android:layout_marginLeft="32dp">
        <Button
            android:id="@+id/shareB"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share_24dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            />



    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imgQrGen"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text"
        android:layout_marginRight="32dp"
        >
        <Button
            android:id="@+id/save"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_file_save_24dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <com.facebook.share.widget.ShareButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Shareeeee"
        android:layout_below="@id/imgQrGen"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/done"
        android:layout_alignParentBottom="true"
        android:background="#4CAF50"
        android:textColor="#fff"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="24sp"
        />

</RelativeLayout>