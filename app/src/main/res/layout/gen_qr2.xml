<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.teamsmokeweed.qroute.bar.BarGenQrS
        android:id="@+id/barGenQr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Here is your QR"
        android:textSize="32dp"
        android:textColor="#4CAF50"
        android:layout_below="@id/barGenQr2"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        />
    <ImageView
        android:id="@+id/imgQrGen"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_below="@+id/imgQrGen"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text">
        <Button
            android:id="@+id/shareB"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share_24dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            />



    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imgQrGen"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text">
        <Button
            android:id="@+id/save"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_file_save_24dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>