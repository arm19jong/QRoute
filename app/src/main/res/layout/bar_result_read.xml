<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/bar_style"
    >

    <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_back_24dp"

        android:layout_margin="16dp"


        />

    <TextView
        android:id="@+id/placeName_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/place_name"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/backButton"
        android:textSize="20sp"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/placeType_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/place_type"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/backButton"
        android:layout_below="@id/placeName_bar"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>